@model Car
<form asp-action="Create" asp-controller="Car" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
    <div style="width:100%; background-color:white; border-radius:10px">
        <div class="row">
            <div style="width:45%; margin-right:2%; margin-left:5%">
                <input type="hidden" asp-for="CarId" />

                <div class="form-group">
                    <label>Model</label>
                    <input asp-for="Model" class="form-control" placeholder="Model..." required />
                    <div class="invalid-feedback">
                        Proszę wprowadzić model
                    </div>
                </div>
                <div class="form-group">
                    <label>Rok produkcji</label>
                    <input asp-for="YearOfProduction" type="number" value="" class="form-control" min="1900" max="2050" placeholder="Rok produkcji..." required />
                    <div class="invalid-feedback">
                        Proszę wprowadzić rok produkcji z zakresu 1900-2050
                    </div>
                </div>
                <div class="form-group">
                    <label>Cena</label>
                    <input asp-for="Price" type="number" value="" class="form-control" min="1" max="100000000" placeholder="Cena..." required />
                    <div class="invalid-feedback">
                        Proszę wprowadzić cenę z zakresu 1-100000000
                    </div>
                </div>
                <div class="form-group">
                    <label>Pojemność skokowa silnika</label>
                    <input asp-for="EngineSize" type="number" value="" class="form-control" min="50" max="10000" placeholder="Pojemnosc..." required />
                    <div class="invalid-feedback">
                        Proszę wprowadzić pojemność skokową silnika z zakresu 50-10000
                    </div>
                </div>
                <div class="form-group">
                    <label>Kolor</label>
                    <input asp-for="Color" class="form-control" placeholder="Kolor..." required />
                    <div class="invalid-feedback">
                        Proszę wprowadzić kolor
                    </div>
                </div>
            </div>
            <div style="width:45%; margin-right:3%">
                <div class="form-group">
                    <label>Producent</label><br />
                    <select asp-for="Manufacturer" class="selectpicker show-tick w-100" data-live-search="true" data-style="btn-info">
                        <option value="Abarth">Abarth</option>
                        <option value="Alfa Romeo">Alfa Romeo</option>
