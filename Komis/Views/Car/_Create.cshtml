                        <option value="Inny">Inny</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Nadwozie</label><br />
                    <select asp-for="BodyType" class="selectpicker show-tick w-100" data-style="btn-info">
                        <option value="Sedan">Sedan</option>
                        <option value="Coupe">Coupe</option>
                        <option value="Kombi">Kombi</option>
                        <option value="Kabriolet">Kabriolet</option>
                        <option value="Targa">Targa</option>
                        <option value="Kompakt">Kompakt</option>
                        <option value="SUV">SUV</option>
                        <option value="Minivan">Minivan</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Typ paliwa</label><br />
                    <select asp-for="FuelType" class="selectpicker show-tick w-100" data-style="btn-info">
                        <option value="Benzyna">Benzyna</option>
                        <option value="Diesel">Diesel</option>
                        <option value="Benzyna + LPG">Banzyna + LPG</option>
                        <option value="Benzyna + CNG">Benzyna + CNG</option>
                        <option value="Elektryczny">Elektryczny</option>
                        <option value="Hybryda">Hybryda</option>
                        <option value="Etanol">Etanol</option>
                        <option value="Wodór">Wodór</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Transmisja</label><br />
                    <select asp-for="Transmission" class="selectpicker show-tick w-100" data-style="btn-info">
                        <option value="FWD">FWD</option>
                        <option value="RWD">RWD</option>
                        <option value="4x4">4x4</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Zdjęcie</label>
                    <div class="custom-file">
                        <input asp-for="Image" type="file" id="PhotoUpload" class="custom-file-input">
                        <label class="custom-file-label" for="PhotoUpload" data-browse="Wyszukaj"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center" style="margin-bottom:10px">
        <button class="btn btn-primary" type="submit">Dodaj auto</button>
    </div>
</form>